#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n;
    scanf("%d",&n);
    int count=0;
    printf("Enter a number\n");
    while(n>1)
    {
        printf("%d\n",n);
        if(n%2==0)
        {
            n/=2;
        }
        else
        {
            n=3*n+1;
        }
        count++;
    }
    printf("%d",n);
    printf("\ncount:%d",count);
    

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
