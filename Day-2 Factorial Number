#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n,a=1,i;
    scanf("%d",&n);
    if(n<0)
    {
        printf("Invalid Input");
        return 0;
    }
    else
    {
        if(n==0)
        {
            a=1;
        }
        else
        {
            for(i=1;i<=n;i++)
            {
                a*=i;
            }
        }
    }
    printf("The Factorial of %d is %d",n,a);
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
