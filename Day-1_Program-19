//Fencing the Ground
#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int l,b;
    float p,q;
    scanf("%d%d",&l,&b);
    p=2*(l+b);
    q=l*b;
    printf("Required length is %.2fm\n",(float)p);
    printf("Required quantity of carpet is %.2fsqm",(float)q);

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    return 0;
}
